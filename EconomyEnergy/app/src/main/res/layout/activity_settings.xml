<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="infopower.economyenergy.Activitys.SettingsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginRight="1dp"
        android:background="@drawable/user"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UsuÃ¡rio: Aldemir"
        android:textColor="#1c829e"
        android:layout_marginLeft="50dp"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#dcdbdb"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:layout_row="1"
        android:layout_column="0" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/password"
        android:layout_marginTop="80dp"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Senha"
        android:id="@+id/button"
        android:textColor="#1c829e"
        android:background="@drawable/transparent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:layout_row="1"
        android:layout_column="0" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#dcdbdb"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="48dp"
        android:layout_row="2"
        android:layout_column="0" />

    <ImageView
        android:layout_width="62px"
        android:layout_height="62px"
        android:id="@+id/imageView3"
        android:background="@drawable/about"
        android:layout_marginTop="60dp"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre Economy Energy"
        android:id="@+id/button2"
        android:textColor="#1c829e"
        android:background="@drawable/transparent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_row="3"
        android:layout_column="0" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#dcdbdb"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="48dp"
        android:layout_row="4"
        android:layout_column="0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/exit"
        android:layout_marginTop="70dp"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair do aplicativo"
        android:id="@+id/button3"
        android:textColor="#1c829e"
        android:background="@drawable/transparent"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="50dp"
        android:layout_row="4"
        android:layout_column="0" />

</GridLayout>
