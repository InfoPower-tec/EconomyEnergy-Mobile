<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adicionar_nova_acao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="infopower.economyenergy.activitys.AdicionarNovaAcaoActivity">

    <Spinner
        android:id="@+id/spinner_images"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"/>



    <EditText
        android:id="@+id/nome_acao_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nome da ação"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:imeOptions="actionNext"
        android:theme="@style/EdtStyleAddAcoes"/>



    <EditText
        android:id="@+id/descricao_acao_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Descrição da ação"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:imeOptions="actionDone"
        android:theme="@style/EdtStyleAddAcoes"
        android:maxEms="50"
        android:minEms="10"/>


    <Button
        android:id="@+id/cadastrar_nova_acao_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Cadastrar ação"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/btn_salvar"
        android:layout_margin="15dp"/>

</LinearLayout>