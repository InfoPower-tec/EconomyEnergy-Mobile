<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acao_sala_jantar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="infopower.economyenergy.activitys.AcaoSalaJantarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/text_view_acao"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#848484"
        android:layout_alignRight="@id/text_view_acao"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <Switch
            android:textColor="#178f09"
            android:text="Lampada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_weight="0.10"
            android:textSize="16dp"
            android:textStyle="bold"
            android:theme="@style/SwitchStyle"/>

        <Switch
            android:textColor="#178f09"
            android:text="Tomada 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:layout_weight="0.20"
            android:layout_below="@+id/switch1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:layout_alignLeft="@+id/switch1"
            android:layout_alignStart="@+id/switch1"
            android:layout_toRightOf="@+id/switch1"
            android:layout_toEndOf="@+id/switch1"
            android:splitTrack="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:theme="@style/SwitchStyle"/>

        <Switch
            android:textColor="#178f09"
            android:text="Tomada 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch3"
            android:layout_weight="0.20"
            android:layout_below="@+id/switch2"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingTop="29dp"
            android:layout_alignLeft="@+id/switch2"
            android:layout_alignStart="@+id/switch2"
            android:layout_toRightOf="@+id/switch2"
            android:layout_toEndOf="@+id/switch2"
            android:splitTrack="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:theme="@style/SwitchStyle"/>
    </RelativeLayout>


</LinearLayout>
